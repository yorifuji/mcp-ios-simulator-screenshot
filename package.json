{
  "name": "mcp-ios-simulator-screenshot",
  "version": "1.1.0",
  "description": "MCP server to capture iOS Simulator screenshots",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-ios-simulator-screenshot": "build/index.js",
    "ios-screenshot": "build/cli.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755') && require('fs').chmodSync('build/cli.js', '755')\"",
    "start": "node build/index.js",
    "cli": "node build/cli.js",
    "dev": "ts-node --esm src/index.ts",
    "dev:cli": "ts-node --esm src/cli.ts",
    "watch": "nodemon --exec ts-node --esm src/index.ts",
    "watch:cli": "nodemon --exec ts-node --esm src/cli.ts",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/sharp": "^0.32.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "author": "yorifuji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yorifuji/mcp-ios-simulator-screenshot.git"
  },
  "keywords": [
    "mcp"
  ],
  "engines": {
    "node": "v22"
  }
}
